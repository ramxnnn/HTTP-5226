@model IEnumerable<LocalFoodTruckTrackerSystem.Models.FoodTruckDto>

@{
    ViewData["Title"] = "Food Trucks";
}

<h1>Food Trucks</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Contact</th>
            <th>Location</th> <!-- Header for Location -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var foodTruck in Model)
        {
            <tr>
                <td>@foodTruck.Name</td>
                <td>@foodTruck.Description</td>
                <td>@foodTruck.Contact</td>
                <td>@foodTruck.LocationAddress</td> <!-- Display the LocationAddress -->
                <td>
                    <a asp-action="Details" asp-route-id="@foodTruck.FoodTruckId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@foodTruck.FoodTruckId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@foodTruck.FoodTruckId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New</a>
