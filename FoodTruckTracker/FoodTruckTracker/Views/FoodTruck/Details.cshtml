@model LocalFoodTruckTrackerSystem.Models.FoodTruck

@{
    ViewData["Title"] = "Food Truck Details";
}

<h1>Food Truck Details</h1>

<div>
    <h4>Food Truck</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Contact</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location?.Address, @Model.Location?.City, @Model.Location?.State</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.FoodTruckId" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
