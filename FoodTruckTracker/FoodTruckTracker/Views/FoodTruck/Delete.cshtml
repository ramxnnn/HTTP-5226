@model LocalFoodTruckTrackerSystem.Models.FoodTruck

@{
    ViewData["Title"] = "Delete Food Truck";
}

<h1>Delete Food Truck</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Food Truck</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Contact</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location?.Address, @Model.Location?.City, @Model.Location?.State</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="FoodTruckId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
