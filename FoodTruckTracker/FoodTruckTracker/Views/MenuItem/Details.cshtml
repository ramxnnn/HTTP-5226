@model LocalFoodTruckTrackerSystem.Models.MenuItem

@{
    ViewData["Title"] = "Menu Item Details";
}

<h1>Menu Item Details</h1>

<div>
    <h4>Menu Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Food Truck ID</dt>
        <dd class="col-sm-10">@Model.FoodTruckId</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MenuItemId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.MenuItemId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
