@model IEnumerable<LocalFoodTruckTrackerSystem.Models.MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}

<h1>Menu Items</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Menu Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Price)</th>
            <th>@Html.DisplayNameFor(model => model.First().FoodTruckId)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.FoodTruckId)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MenuItemId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MenuItemId" class="btn btn-danger">Delete</a>
                    <a asp-action="Details" asp-route-id="@item.MenuItemId" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
