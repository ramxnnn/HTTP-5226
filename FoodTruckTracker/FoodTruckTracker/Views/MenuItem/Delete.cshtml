@model LocalFoodTruckTrackerSystem.Models.MenuItem

@{
    ViewData["Title"] = "Delete Menu Item";
}

<h1>Delete Menu Item</h1>

<h4>Are you sure you want to delete this menu item?</h4>
<div>
    <h4>Menu Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Food Truck ID</dt>
        <dd class="col-sm-10">@Model.FoodTruckId</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.MenuItemId" /> 
    <div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
