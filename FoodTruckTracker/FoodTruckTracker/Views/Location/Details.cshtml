@model LocalFoodTruckTrackerSystem.Models.Location

@{
    ViewData["Title"] = "Location Details";
}

<h1>Location Details</h1>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.LocationId" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
