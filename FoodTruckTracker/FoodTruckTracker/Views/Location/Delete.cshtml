@model LocalFoodTruckTrackerSystem.Models.Location

@{
    ViewData["Title"] = "Delete Location";
}

<h1>Delete Location</h1>

<h4>Are you sure you want to delete this location?</h4>
<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-locationId="@Model.LocationId" method="post">
    <input type="hidden" asp-for="LocationId" />
    <div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
